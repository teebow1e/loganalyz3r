<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>

<!-- Declare stylesheet in tag -->

<VBox spacing="10" xmlns="http://javafx.com/javafx/17.0.10" stylesheets="/css/LoginForm.css">
    <VBox alignment="CENTER" spacing="10">
        <Label text="Login" styleClass="login-label"/>
    </VBox>

    <VBox alignment="CENTER" spacing="10" styleClass="Vbox-text">
        <TextField promptText="Enter username" styleClass="text-box"/>
        <TextField promptText="Enter password" styleClass="text-box"/>
    </VBox>

    <VBox alignment="BOTTOM_RIGHT" spacing="10" xmlns="http://javafx.com/javafx/17.0.10" styleClass="vbox-create-acc">
        <Label text="Create Account"/>
    </VBox>
</VBox>
