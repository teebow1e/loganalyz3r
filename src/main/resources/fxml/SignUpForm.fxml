<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/17.0.10" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hust.cyber.LoginController" styleClass="Vbox-main">
    <VBox spacing="10" styleClass="Vbox-content">
        <VBox spacing="10" styleClass="Vbox-return">
            <Label text="Return to Login" styleClass="return-label" onMouseClicked="#returnToLogin"/>
        </VBox>

        <VBox alignment="CENTER" spacing="10" styleClass="Vbox-login-label">
            <Label text="Sign Up" styleClass="login-label"/>
        </VBox>

        <VBox alignment="CENTER" spacing="10" styleClass="Vbox-text-box">
            <TextField fx:id="usernameField" promptText="Enter username" styleClass="text-box"/>
            <PasswordField fx:id="passwordField" promptText="Enter password" styleClass="text-box"/>
            <PasswordField fx:id="rePasswordField" promptText="Re-Enter password" styleClass="text-box"/>
            <Button text="Submit" styleClass="button-sign-up" onMouseClicked="#handleSignupAccount"/>
        </VBox>

    </VBox>
</VBox>
