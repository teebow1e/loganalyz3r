<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<!-- Declare stylesheet in tag -->

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/17.0.10" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hust.cyber.LoginFormController" styleClass="Vbox-main">
    <VBox alignment="CENTER" spacing="10" styleClass="Vbox-content">
        <VBox alignment="CENTER" spacing="10" styleClass="Vbox-login-label">
            <Label text="Sign Up" styleClass="login-label"/>
        </VBox>

        <VBox alignment="CENTER" spacing="10" styleClass="Vbox-text-box">
            <TextField promptText="Enter username" styleClass="text-box"/>
            <TextField promptText="Enter password" styleClass="text-box"/>
            <TextField promptText="Re-Enter password" styleClass="text-box"/>
        </VBox>

        <VBox alignment="CENTER" spacing="10" styleClass="Vbox-sign-up-button">
            <Button text="Submit" styleClass="button-sign-up" onMouseClicked="#handleSubmitAccount"/>
        </VBox>
    </VBox>
</VBox>
