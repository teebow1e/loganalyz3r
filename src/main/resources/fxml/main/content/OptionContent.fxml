<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox minHeight="800.0" minWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.OptionController">
   <children>
      <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Select default location for Apache log:" />
            <TextField fx:id="apacheLogLocationTF" editable="false" prefHeight="25.0" prefWidth="240.0" />
            <Button fx:id="chooseApacheLocationBtn" mnemonicParsing="false" text="Choose File" />
            <Button fx:id="confirmApacheLocationBtn" mnemonicParsing="false" text="Confirm" />
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Select default location for ModSecurity log:" />
            <TextField fx:id="modsecLogLocationTF" editable="false" prefWidth="240.0" />
            <Button fx:id="chooseModsecLocationBtn" mnemonicParsing="false" text="Choose File" />
            <Button fx:id="confirmModsecLocationBtn" mnemonicParsing="false" text="Confirm" />
         </children>
      </HBox>
      <VBox prefHeight="200.0" prefWidth="100.0">
         <children>
            <Text fx:id="ipDBLocationText" strokeType="OUTSIDE" strokeWidth="0.0" text="IP Location Database: Available at /etc/passwd" />
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Text fx:id="ipDBNewVerStatusText" strokeType="OUTSIDE" strokeWidth="0.0" text="New version: NOT AVAILABLE" />
                  <Button fx:id="fetchUpdateDBBtn" mnemonicParsing="false" onAction="#fetchUpdateDB" text="Fetch updates" />
                  <Button fx:id="updateDBBtn" mnemonicParsing="false" text="Update DB" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
