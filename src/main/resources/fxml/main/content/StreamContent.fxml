<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.StreamController">
    <Label alignment="CENTER" contentDisplay="CENTER" styleClass="title-label" text="Logs stream">
        <font>
            <Font size="24.0" />
        </font>
        <padding>
            <Insets top="10.0" />
        </padding>
    </Label>
    <HBox alignment="TOP_RIGHT">
        <children>
            <Button fx:id="startStopButton" mnemonicParsing="false" text="Start" onAction="#handleStartStopButtonAction"/>
        </children>
        <opaqueInsets>
            <Insets />
        </opaqueInsets>
        <padding>
            <Insets right="10.0" />
        </padding>
    </HBox>
    <TableView fx:id="Table" prefHeight="600.0" prefWidth="1000.0">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
        <opaqueInsets>
            <Insets />
        </opaqueInsets>
    </TableView>
</VBox>
